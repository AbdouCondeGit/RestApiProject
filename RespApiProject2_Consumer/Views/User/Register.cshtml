@model RegisterRequestDTO
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card bg-light">
                    <div class="card-header bg-gradient text-primary">
                        <h2 class="text-center">REGISTER</h2>
                    </div>
                    <div class="card-body">
                        <form id="registerForm"  method="post">
                            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="mb-3">
                                        <label for="emailInput" class="form-label">Email</label>
                                        <input id="emailInput" asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label for="nameInput" class="form-label">UserName</label>
                                            <input id="nameInput" asp-for="Username" class="form-control" autocomplete="name" aria-required="true" placeholder="Your Name" />
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label for="passwordInput" class="form-label">Password</label>
                                        <input type="password" id="passwordInput" asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label for="nameInput" class="form-label">Role</label>
                                        <input id="nameInput" asp-for="Role" class="form-control" autocomplete="name" aria-required="true" placeholder="Your Name" />
                                        <span asp-validation-for="Role" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-success">Register</button>
                        </form>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <h3>Use another service to register.</h3>
                    <hr />
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <script>
            var roleInput = document.getElementById("roleInput");
            var companyInputContainer = document.getElementById("companyInputContainer");

            roleInput.addEventListener("change", function () {
                if (roleInput.value === "Company") {
                    companyInputContainer.style.display = "block";
                } else {
                    companyInputContainer.style.display = "none";
                }
            });
        </script>
    }
</body>
</html>
