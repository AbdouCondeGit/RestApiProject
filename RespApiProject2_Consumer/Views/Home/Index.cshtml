@model IEnumerable<RespApiProject2_Consumer.Models.Dtos.VillaDTO>

<img class="d-block w-100" src="~/js/paradisiaque5.png" alt="">
<hr />
 @if (Model != null)
 {
<div class="row row-cols-1 row-cols-md-2 g-0 container-fluid">
   
        @foreach (var villa in Model)
        {
            <div class="col-md-6">
                <div class="p-4 villa-card" style="border-radius: 20px; border: 1px solid #ffffff;">
                    <div class="row">
                        <div class="col-4">
                            <img class="d-block w-100" src="~/js/@villa.ImageUrl" alt="Villa Image">
                        </div>
                        <div class="col-8">
                            <p class="card-title text-warning" style="font-size: xx-large;">@villa.Name</p>
                            <p class="card-text">@Html.Raw(villa.Details)</p>
                        </div>
                        <div class="col-12">
                            <div class="row pb-3 pt-2">
                                <div class="col-4">
                                    <a asp-action="Book" class="btn btn-success form-control btn-block">Book</a>
                                </div>
                                <div class="col-4">
                                    <span style="font-size: 14px; color: #6c757d; font-weight: bold;">Max Occupancy: @villa.Occupancy adults</span><br />
                                    <span style="font-size: 14px; color: #6c757d; font-weight: bold;">Villa Size: @villa.Sqft sqft</span><br />
                                </div>
                                <div class="col-4">
                                    <span class="text-warning float-end font-weight-bold" style="font-size: 25px;">
                                        <span style="border-bottom: 1px solid #ff6a00;">@villa.Rate.ToString("c")</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
   
</div>
}
<style>
    .villa-card {
        height: 280px; /* Remplacez cette valeur par la hauteur souhaitée */
    }
</style>
