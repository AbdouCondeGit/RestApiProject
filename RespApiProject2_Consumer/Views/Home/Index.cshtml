@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<RespApiProject2_Consumer.Models.Dtos.VillaDTO>

<img class="d-block w-100" src="~/js/paradisiaque3.jpg" alt="">
<hr />
<br />
<div class="row row-cols-1 row-cols-md-2 g-0">
    @if(Model!=null){
    @foreach (var villa in Model)
    {
        <div class="col-md-6">
            <div class="p-4" style="border-radius: 20px; border: 1px solid #ffffff;">
                <div class="row">
                    <div class="col-4">
                        <img class="d-block w-100" src="@villa.ImageUrl" alt="Villa Image">
                    </div>
                    <div class="col-8">
                        <p class="card-title text-warning" style="font-size: xx-large;">@villa.Name</p>
                        <p class="card-text">@Html.Raw(villa.Details)</p>
                    </div>
                    <div class="col-12">
                        <div class="row pb-3 pt-2">
                            <div class="col-4">
                                <a href="#" class="btn btn-success form-control btn-block">Book</a>
                            </div>
                            <div class="col-4">
                                <span style="font-size: 14px; color: #6c757d; font-weight: bold;">Max Occupancy: @villa.Occupancy adults</span><br />
                                <span style="font-size: 14px; color: #6c757d; font-weight: bold;">Villa Size: @villa.Sqft sqft</span><br />
                            </div>
                            <div class="col-4">
                                <span class="text-warning float-end font-weight-bold" style="font-size: 25px;">
                                    USD <span style="border-bottom: 1px solid #ff6a00;">@villa.Rate.ToString("c")</span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    }
</div>
