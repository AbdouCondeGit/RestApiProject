@{
    ViewData["Title"] = "Villa Values Page";
}
@model IEnumerable<VillaValueDTO>
<div class="container p-3">
    <section>
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="display-4">Villa Values List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="VillaValue" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-database-add"></i> Create New Villa Value
                </a>
            </div>
        </div>
    </section>

    <br /><br />

    <table class="table table-bordered table-striped" id="myTable" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th>
                   Villa Number
                </th>
                <th>
                     Name
                </th>
                <th>
                     Rate
                </th>
                <th>
                    Occupancy
                </th>
                <th>
                    Square feet
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/villaValue.js"></script>

}