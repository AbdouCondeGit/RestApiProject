@model VillaValueUpdateDTO

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Villa Value</h2>
            <hr />
        </div>
        <input hidden asp-for="VillaNo" />
        <div class="mb-3">
            <label asp-for="VillaNo" class="form-label"></label>
            <input asp-for="VillaNo" disabled class="form-control" />
            <span asp-validation-for="VillaNo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="VillaID" class="form-label">Villa ID</label>
            <input asp-for="VillaID" class="form-control" />
            <span asp-validation-for="VillaID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SpecialDetails" class="form-label">Special Details</label>
            <textarea asp-for="SpecialDetails" class="form-control"></textarea>
            <span asp-validation-for="SpecialDetails" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="VillaValue" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
