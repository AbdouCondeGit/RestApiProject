@{
    ViewData["Title"] = "Create";
}

@model VillaValueCreateDTO

<form method="post">
    <div class="container p-3">
        <div class="border-bottom-0 p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Create Villa Value</h2>
                <hr />
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="VillaNo" class="form-label">Villa No</label>
                <input asp-for="VillaNo" class="form-control">
                <span asp-validation-for="VillaNo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="VillaID" class="form-label">Villa ID</label>
                <input asp-for="VillaID" class="form-control">
                <span asp-validation-for="VillaID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SpecialDetails" class="form-label">Special Details</label>
                <textarea asp-for="SpecialDetails" class="form-control"></textarea>
                <span asp-validation-for="SpecialDetails" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create Villa Value
                </button>
                <a asp-controller="VillaValue" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
